<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Medical Records</title>
    <!-- DataTables CSS -->
    <link rel="stylesheet" href="https://cdn.datatables.net/2.1.7/css/dataTables.dataTables.css" />
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f0f4f8;
            margin: 0;
            padding: 20px;
            color: #333;
        }

        h1 {
            color: #1a73e8;
            margin-bottom: 30px;
            font-size: 28px;
            font-weight: 700;
            text-align: center;
        }

        .table-container {
            width: 100%;
            overflow-x: auto;
            background-color: #ffffff;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
            margin: 0 auto;
            padding: 0px 5px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            min-width: 600px;
            background-color: #fff;
        }

        thead {
            position: sticky;
            top: 0;
            background-color: #1a73e8;
            color: #fff;
        }

        th,
        td {
            padding: 14px 16px;
            text-align: center;
            border: 1px solid #ddd;
        }

        th {
            background-color: #1a73e8;
            color: #ffffff;
            text-transform: uppercase;
            font-weight: 600;
        }

        tr:nth-child(even) {
            background-color: #f9fafb;
        }

        /* DataTables Search Bar Styling */
        .dataTables_filter,
        .dataTables_length {
            text-align: right;
            margin-bottom: 20px;
            padding: 20px;
        }


        /* Responsive adjustments */
        @media (max-width: 768px) {
            table {
                min-width: 600px;
                /* Ensures table scrolls horizontally on mobile */
            }

            th,
            td {
                padding: 10px 12px;
                font-size: 12px;
            }
        }

        @media (max-width: 480px) {

            th,
            td {
                padding: 8px 10px;
                font-size: 11px;
            }

            th {
                font-size: 13px;
            }
        }
    </style>
</head>

<body>
    <h1>All Medical Records</h1>
    <div class="table-container">
        <table id="recordsTable" class="display">
            <thead>
                <tr>
                    <th>No</th>
                    <th>ID</th>
                    <th>Client</th>
                    <th>Age</th>
                    <th>Weight</th>
                    <th>Diagnosis</th>
                    <th>Treatment</th>
                    <th>Complaints</th>
                    <th>Malaria</th>
                    <th>Ward</th>
                    <th>Designation</th>
                    <th>Email</th>
                </tr>
            </thead>
            <tbody>
                <% let number=1; %>
                    <% data.forEach(item=> { %>
                        <tr>
                            <td>
                                <%= number++ %>
                            </td> <!--post Increment> -->
                            <td>
                                <%= item._id %>
                            </td>
                            <td>
                                <%= item.client %>
                            </td>
                            <td>
                                <%= item.age %>
                            </td>
                            <td>
                                <%= item.weight %>
                            </td>
                            <td>
                                <%= item.diagnosis %>
                            </td>
                            <td>
                                <%= item.treatment %>
                            </td>
                            <td>
                                <%= item.complaints %>
                            </td>
                            <td>
                                <%= item.malaria %>
                            </td>
                            <td>
                                <%= item.ward %>
                            </td>
                            <td>
                                <%= item.designation %>
                            </td>
                            <td>
                                <%= item.email %>
                            </td>
                        </tr>
                        <% }); %>
            </tbody>
        </table>
    </div>

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- DataTables JS -->
    <script src="https://cdn.datatables.net/2.1.7/js/dataTables.js"></script>

    <!-- Initialize DataTables with custom settings -->
    <script>
        $(document).ready(function () {
            $('#recordsTable').DataTable({
                "pageLength": 20,  // Show 20 records per page
                "searching": true,  // Enable the search filter
                "ordering": true,   // Enable column sorting
                "lengthChange": true, // Hide page length menu
                "columnDefs": [
                    { "targets": [1, 2, 7, 10, 11], "searchable": true }, //  searching for ID column
                    { "targets": [1, 2, 6, 7, 11], "orderable": false }   // Disable sorting for ID column
                ]
            });
        });
    </script>
</body>

</html>
