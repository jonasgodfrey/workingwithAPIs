<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Fetched Data</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f0f4f8;
            margin: 0;
            padding: 20px;
            color: #333;
        }

        h1 {
            color: #1a73e8;
            margin-bottom: 30px;
            font-size: 28px;
            font-weight: 700;
            text-align: center;
        }

        .table-container {
            width: 100%;
            overflow-x: auto;
            background-color: #ffffff;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
            margin: 0 auto;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            min-width: 600px; 
            background-color: #fff;
        }

        thead {
            position: sticky;
            top: 0;
            background-color: #5e8cfb;
            color: #fff;
        }

        th, td {
            padding: 14px 16px;
            text-align: center;
            border: 1px solid #aaa9a9;
        }

        th {
            background-color: #5e8cfb;
            color: #ffffff;
            text-transform: uppercase;
            font-weight: 600;
        }

        th:hover {
            background-color: #4a78e1;
        }

        tr:hover {
            background-color: #f9fafb;
        }

        tr:nth-child(even) {
            background-color: #f1f3f6;
        }

        tfoot {
            background-color: #f5f5f5;
        }

        tfoot tr:hover {
            background-color: #e1f5fe;
        }

        tfoot td {
            font-weight: bold;
            font-size: 16px;
        }

        @media (max-width: 768px) {
            table {
                min-width: 600px; /* Ensures table scrolls horizontally on mobile */
            }

            th, td {
                padding: 10px 12px;
                font-size: 12px;
            }
        }

        @media (max-width: 480px) {
            th, td {
                padding: 8px 10px;
                font-size: 11px;
            }

            th {
                font-size: 13px;
            }
        }
    </style>
</head>

<body>
    <h1>All Medical Records</h1>
    <div class="table-container">
        <table>
            <thead>
                <tr>
                    <th>No</th>
                    <th>ID</th>
                    <th>Client</th>
                    <th>Age</th>
                    <th>Weight</th>
                    <th>Diagnosis</th>
                    <th>Treatment</th>
                    <th>Complaints</th>
                    <th>Malaria</th>
                    <th>Ward</th>
                    <th>Designation</th>
                    <th>Email</th>
                </tr>
            </thead>
            <tbody>
                <% let number = 0; %>
                <% data.forEach(item => { %>
                    <tr>
                        <td><%= ++number %></td>
                        <td><%= item._id %></td>
                        <td><%= item.client %></td>
                        <td><%= item.age %></td>
                        <td><%= item.weight %></td>
                        <td><%= item.diagnosis %></td>
                        <td><%= item.treatment %></td>
                        <td><%= item.complaints %></td>
                        <td><%= item.malaria %></td>
                        <td><%= item.ward %></td>
                        <td><%= item.designation %></td>
                        <td><%= item.email %></td>
                    </tr>
                <% }); %>
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="11">Total Entries</td>
                    <td><%= number %> Entries</td>
                </tr>
            </tfoot>
        </table>
    </div>
</body>

</html>
